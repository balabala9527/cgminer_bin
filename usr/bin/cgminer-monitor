#!/bin/sh
# This file is for cron job

# Make sure there is only one cgminer running
C=`pidof cgminer | wc -w`
if [ "$C" != "1" ]; then
    echo `date` >> /tmp/monitor.txt
    echo `date +%s` >> /tmp/monitor.txt
    echo "too many cgminer" >> /tmp/monitor.txt
    kill `cat /var/run/cgminer.pid`
    killall -s 9 cgminer
    sleep 1
    /etc/init.d/cgminer restart
    exit 0;
fi

if [ -e "/tmp/warmingup" ]; then
	exit 0;
fi

# Make sure the devices staill active
B=`cgminer-api devs | grep "^   \[Last Share Time\]"`
if [ "$?" != "0" ]; then
    echo `date` >> /tmp/monitor.txt
    echo `date +%s` >> /tmp/monitor.txt
    echo "last share time equal 0" >> /tmp/monitor.txt
    kill `cat /var/run/cgminer.pid`
    sleep 1
    killall -s 9 cgminer
    sleep 1
    /etc/init.d/cgminer restart
    exit 0;
fi

A=`cat /tmp/cm.log`
echo -n "$B" > /tmp/cm.log
if [ "$A" == "$B" ]; then
    echo `date` >> /tmp/monitor.txt
    echo `date +%s` >> /tmp/monitor.txt
    echo "no share" >> /tmp/monitor.txt
    kill `cat /var/run/cgminer.pid`
    sleep 1
    killall -s 9 cgminer
    sleep 1
    /etc/init.d/cgminer restart
    exit 0;
fi
